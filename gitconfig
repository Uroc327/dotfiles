[rerere]
	enabled = true
[diff]
	whitespace = red reverse
[difftool]
	prompt = false
[alias]
	unstash = stash pop
	dt = difftool
	undo-hard = reset --hard HEAD^
	rprune = remote prune
	co = checkout
	cl = clone
	m = merge
	pu = push
	po = push origin
	f = fetch
	fo = fetch origin
	fu = fetch upstream
	br = branch
	brs = branch -va
	rb = rebase
	rboc = !git rebase origin/$(git symbolic-ref --short HEAD)
	rbom = rebase origin/master
	rbod = rebase origin/develop
	undomrg = reset --merge ORIG_HEAD
	gcprune = gc --aggressive --prune=now
	resetwd = reset --hard
	reset-permissions = !git diff -p -R | grep -E '^(diff|(old|new) mode)' | git apply
	root = rev-parse --show-toplevel
	d = diff
	g = grep
	children = "!f() { git rev-list --all --not $1^@ --children | grep $(git rev-parse $1); }; f"
[push]
	default = tracking
	recurseSubmodules = check
[fetch]
	prune = true
[grep]
	lineNumber = true
[color]
	ui = auto
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
